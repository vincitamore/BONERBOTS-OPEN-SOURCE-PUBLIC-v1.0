# Multi-Tenant Arena Environment Variables
# Copy this file to .env and fill in your actual values

# =================
# Security & Auth
# =================

# JWT Secret Key (REQUIRED) - Generate a strong random string
# Example: openssl rand -base64 32
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Refresh Token Secret (REQUIRED) - Should be different from JWT_SECRET
# Example: openssl rand -base64 32
REFRESH_TOKEN_SECRET=your-super-secret-refresh-token-key-change-this

# Master Encryption Key (REQUIRED) - Used for encrypting sensitive data
# Example: openssl rand -base64 32
MASTER_ENCRYPTION_KEY=your-master-encryption-key-change-this-in-production

# Access Token Expiry (default: 8h)
JWT_ACCESS_EXPIRES=8h

# Refresh Token Expiry (default: 7d)
JWT_REFRESH_EXPIRES=7d

# =================
# Database
# =================

# Path to SQLite database file
DATABASE_PATH=../data/arena.db

# =================
# Server Configuration
# =================

# Server Port
PORT=3001

# Node Environment (development, production, test)
NODE_ENV=development

# CORS Origins (comma-separated list)
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# =================
# API Rate Limiting
# =================

# Enable/disable rate limiting (true/false)
ENABLE_RATE_LIMITING=true

# General API rate limit (requests per 15 minutes)
API_RATE_LIMIT=100

# Auth endpoints rate limit (requests per 15 minutes)
AUTH_RATE_LIMIT=10

# Registration rate limit (requests per hour)
REGISTER_RATE_LIMIT=5

# Password reset rate limit (requests per hour)
PASSWORD_RESET_RATE_LIMIT=3

# =================
# Logging
# =================

# Log Level (error, warn, info, debug)
LOG_LEVEL=info

# Enable audit logging (true/false)
ENABLE_AUDIT_LOG=true

# =================
# Features
# =================

# Enable registration (true/false)
ENABLE_REGISTRATION=true

# Enable password recovery (true/false)
ENABLE_PASSWORD_RECOVERY=true

# =================
# External Services
# =================

# OpenAI API Key (optional - for AI providers)
OPENAI_API_KEY=

# Anthropic API Key (optional - for Claude)
ANTHROPIC_API_KEY=

# =================
# Backups
# =================

# Backup directory path
BACKUP_DIR=../backups

# Enable automatic backups (true/false)
ENABLE_AUTO_BACKUP=true

# Backup schedule (cron format) - Default: daily at 2 AM
BACKUP_CRON=0 2 * * *

# Number of backups to keep
BACKUP_RETENTION=7

# =================
# Email (Optional)
# =================

# SMTP Configuration for email notifications (if needed in future)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASS=your-email-password
# SMTP_FROM=noreply@yourapp.com

# =================
# Development
# =================

# Enable debug mode (true/false)
DEBUG=false

# Disable authentication for testing (NEVER in production!)
# DISABLE_AUTH=false
